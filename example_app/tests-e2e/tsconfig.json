{
    "compilerOptions": {
      "verbatimModuleSyntax": false,
      "target": "es2021",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "@server": ["../server/src/*"]
      }
    }
